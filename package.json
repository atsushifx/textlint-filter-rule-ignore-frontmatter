{
  "name": "textlint-filter-rule-ignore-frontmatter",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for @textlint/textlint-filter-rule-ignore-frontmatter: skips YAML/TOML front matter in markdown. Useful with Zola, Hugo, etc.",
  "author": "Furukawa Atsushi <atsushifx@gmail.com>",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "textlint",
    "filter-rule",
    "frontmatter",
    "ignore",
    "yaml",
    "toml",
    "zola",
    "hugo",
    "markdown"
  ],
  "scripts": {
    "test:ci": "pnpm exec lerna run test:ci",
    "clean": "pnpm exec lerna run clean",
    "format:dprint": "dprint fmt --config ./shared/configs/dprint.base.jsonc ",
    "check:dprint": "dprint check --config ./shared/configs/dprint.base.jsonc ",
    "check:types": "tsc --noEmit",
    "lint": "pnpm exec lerna run lint",
    "sync:configs": "bash ./scripts/sync_configs.sh ",
    "sync:configs:all": "pnpm run sync:configs  all && pnpm exec lerna run sync:configs -- all"
  },
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@commitlint/types": "^19.8.0",
    "@eslint/js": "^9.26.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.2",
    "@textlint/types": "^14.7.1",
    "@types/node": "^22.15.11",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "cspell": "^8.19.4",
    "eslint": "^9.26.0",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "lerna": "^8.2.2",
    "rimraf": "^6.0.1",
    "secretlint": "^9.3.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
