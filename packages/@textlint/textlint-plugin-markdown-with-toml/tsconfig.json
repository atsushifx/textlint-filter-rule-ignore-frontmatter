{
  "extends": "../../../shared/configs/tsconfig.base.json",
  // directory definition
  "compilerOptions": {
    // in/out dir
    "rootDir": ".",
    "outDir": "lib",
    // aliases
    "baseUrl": "./",
    "paths": {
      // ローカルのプラグイン、ルール
      "@/*": [
        "src/*" // for sub repository local
      ],
      // Monorepo 共有用
      "@shared/*": [
        "../../../shared/*"
      ]
    },
    // incremental build info
    "tsBuildInfoFile": ".tsbuildinfo",
    // types
  },
  // files
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules",
    "lib",
    "module"
  ],
  // references
  "references": []
}
