{
	"extends": "../../../shared/configs/tsconfig.base.json",
	// directory definition
	"compilerOptions": {
		// in/out dir
		"rootDir": ".",
		"outDir": "lib",
		// aliases
		"baseUrl": "./",
		"paths": {
			// ローカルのプラグイン、ルール
			"@/*": [
				"src/*" // for sub repository local
			],
			// Monorepo 共有用
			"@shared/*": [
				"../../../shared/*"
			],
			// テスト・補助コード : UnitTest用Helper、型
			"@tests/*": [
				"tests-internal/*"
			]
		},
		//
		"tsBuildInfoFile": ".tsbuildinfo",
		// types
		"typeRoots": [
			"./types",
			"node_modules/@types"
		],
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"tests-internal/**/*"
	],
	"exclude": [
		".git",
		"node_modules",
		"lib",
		"module"
	],
	// references
	"references": []
}
