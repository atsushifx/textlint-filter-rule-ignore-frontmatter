{
  "name": "@textlint/textlint-plugin-markdown-with-toml",
  "version": "0.1.0",
  "description": " textlint plugin that parses Markdown with TOML front matter. Supports content platforms like Zola and Hugo.",
  "author": "atsushifx <atsushifx@gmail.com>",
  "email": "atsushifx@gmail.com",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./lib/index.js",
  "module": "./module/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    "import": "./module/index.js",
    "require": "./lib/index.js"
  },
  "files": [
    "lib",
    "module",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "textlint",
    "markdown",
    "parser",
    "frontmatter",
    "toml",
    "zola",
    "hugo",
    "markdown-parser"
  ],
  "scripts": {
    "prepare": "bash ../../../bin/sync_configs.sh . all",
    "build": "pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsup --config tsup.config.ts",
    "build:esm": "tsup --config tsup.config.module.ts",
    "clean": "rimraf lib module",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "check:types": "tsc --noEmit",
    "check:spellcheck": "pnpm exec cspell --config .vscode/cspell.json",
    "lint": "pnpm exec eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "pnpm exec eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:secrets": "secretlint --maskSecrets --secretlintignore .gitignore **/*",
    "test": "pnpm run test:develop && pnpm run test:ci",
    "test:ci": "pnpm exec vitest run ./tests/",
    "test:develop": "pnpm exec vitest  ./src/",
    "test:watch": "pnpm exec vitest --watch",
    "sync:configs": "bash ../../../bash/sync_configs.sh . "
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {},
  "dependencies": {
    "@textlint/markdown-to-ast-with-toml": "latest"
  }
}
