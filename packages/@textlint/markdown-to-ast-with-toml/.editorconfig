# @license   MIT
#
# @description<<
#
# Default settings for text-based development (Markdown, TypeScript, Shell etc.)
# Fine-tuned per file type and language. Useful for TIL-style note-taking and plugin dev.
#
#<<

root = true

### Global default settings
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4
tab_width = 4

### General files without extensions
[*.]
indent_style = space
indent_size = 2
tab_width = 2

### Programming Languages

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
tab_width = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 4
tab_width = 4

# PowerShell
[*.ps1]
indent_style = space
indent_size = 4
tab_width = 4

### Document Formats

# Markdown
[*.md]
indent_style = space
indent_size = 2
tab_width = 2

# JSON
[*.json]
indent_style = tab
indent_size = 2
tab_width = 2

# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
tab_width = 2

# INI / TOML
[*.{ini,toml}]
indent_style = tab
indent_size = 4
tab_width = 4

# RC files (e.g. .eslintrc)
[*rc]
indent_style = space
indent_size = 2
tab_width = 2

### Git-related files

# Git config files
[.git*]
indent_style = tab
indent_size = 4
tab_width = 4

[**/git/*]
indent_style = tab
indent_size = 4
tab_width = 4
