{
	"extends": "../../../shared/configs/tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*" // for sub repository local
			],
			"@shared/*": [
				"../../../shared/*"
			]
		},
		"outDir": "lib",
		"tsBuildInfoFile": ".tsbuildinfo",
	},
	"include": [
		"src/**/*.{ts,tsx}",
		"types/**/*.{ts,tsx}"
	],
	"exclude": [
		".git",
		"node_modules",
		"lib",
		"module",
		"tests"
	],
	"references": []
}
