// @(#) : cspell settings for this workspace
/**
 *
 * @version  1.0.0
 * @author   Furukawa, Atsushi <atsushifx@aglabo.com>
 * @since    2025-04-11
 * @license  MIT
 *
 * @description<<
 *
 * This file defines cspell (Code Spell Checker) settings for this workspace.
 * It enables project-specific spelling rules and dictionary customization.
 *
 *<<
 */
{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/packages/cspell-types/cspell.schema.json",
  "version": "0.2",
  "import": [
    "${env:XDG_CONFIG_HOME}/vscode/cspell.config.json"
  ],
  "language": "en",
  "caseSensitive": true,
  "dictionaryDefinitions": [
    {
      "name": "project-dic",
      "description": "dictionary for this project",
      "path": "./cspell/dicts/project.dic",
      "addWords": true,
      "scope": "workspace"
    }
  ],
  "dictionaries": [
    "user-dic",
    "project-dic"
  ]
}
