 * @description<<
 *
 * This setting file is for textlint plugin development.
 * It provides consistent formatting, linting, and markdown tooling
 *
 *<<
 */
{
  // File associations
  "files.associations": {
    ".vscode": "vscode-workspace"
  },

  // Editor behavior
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  // javsscript settings
  "javascript.updateImportsOnFileMove.enabled": "always",

  // lincenser : license for My Programs
  "licenser.author": "Furukawa Atsushi <atsushifx@gmail.com>",
  "licenser.license": "MIT",

  // JSON / YAML validation
  "json.validate.enable": true,

  // textlint settings
  "textlint.autoFixOnSave": true,
  // "textlint.nodePath": "C:\\Users\\atsushifx\\.local\\share\\pnpm\\5",
  "textlint.languages": [
    "plaintext",
    "markdown"
  ],

  // Formatter settings
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },

  // ESLint for TypeScript and JS
  "eslint.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.options": {
    "extensions": [
      ".ts",
      ".tsx"
    ]
  },

  // Better Comments
  "better-comments.highlightPlainText": true,

  // AI assertions
  // gemini code assist
  "geminicodeassist.project": "",

  // theme
  "workbench.colorTheme": "Night Owl"
}
