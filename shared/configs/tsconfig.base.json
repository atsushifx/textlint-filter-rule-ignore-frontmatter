{
  "@(#)": "Base tsconfig for textlint monorepo with tsup and strict typing",
  "compilerOptions": {
    // ✅ 厳格チェック
    "alwaysStrict": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // ✅ ターゲットとモジュール解決
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    // ✅ 型解決と互換性
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "types": [
      "node"
    ],
    // ✅ 出力・ソースマップ
    "sourceMap": true,
    "newLine": "LF",
    "composite": false,
    // incremental build
    "incremental": true,
    // "tsBuildInfoFile": ".tsbuildinfo",
    // input/output Dir
    "outDir": "./dist",
    // ✅ ライブラリ
    "lib": [
      "ESNext",
      "DOM"
    ],
    // ✅ エイリアス設定（←追加！）
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      // 外部パッケージ用にリザーブ
      //    "@textlinttest/*": [
      //
      //      ]
    },
    // ✅ 型補完
  },
}
